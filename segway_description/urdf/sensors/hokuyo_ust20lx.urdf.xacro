<robot xmlns:xacro="http://ros.org/wiki/xacro" name="hokuyo_ust20lx">
  
    <xacro:macro name="hokuyo_ust20lx" params="laser_prefix parent *origin">
        <joint name="${laser_prefix}_laser_joint" type="fixed">
            <xacro:insert_block name="origin" />
            <parent link="${parent}" />
            <child link="${laser_prefix}_laser_link" />
        </joint>

        <link name="${laser_prefix}_laser_link">
            <inertial>
                <mass value="0.37" />
                <origin xyz="0 0 0" />
                <inertia ixx="0.000323" ixy="0.0" ixz="0.0"
                         iyx="0.0" iyy="0.000333" iyz="0.0"
                         izx="0.0" izy="0.0"      izz="0.000135" />
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://segway_description/meshes/sensors/hokuyo_ust20lx.dae" />
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0 -0.013" rpy="0 0 0" />
                <geometry>
                    <box size="0.05 0.05 0.7" />
                </geometry>
            </collision>
        </link>

    </xacro:macro>
</robot>
